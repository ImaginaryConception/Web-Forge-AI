{% extends 'base.html.twig' %}

{% block title %}Requêtes SQL - {{ dbName }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/database.css') }}">
<style>
    .cpanel-badge {
        background-color: #FF6C2C;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: bold;
    }
    .query-editor {
        font-family: monospace;
        min-height: 150px;
        resize: vertical;
    }
    .result-table {
        overflow-x: auto;
        max-width: 100%;
    }
    .result-table table {
        border-collapse: collapse;
        width: 100%;
    }
    .result-table th, .result-table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    .result-table th {
        background-color: #f2f2f2;
    }
    .result-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }
</style>
{% endblock %}

{% block page_title %}Requêtes SQL - {{ dbName }}{% endblock %}
{% block page_subtitle %}Exécutez des requêtes SQL sur votre base de données MySQL{% endblock %}

{% block body %}
<div class="container">
    <div class="db-card mb-4">
        <div class="db-card-header">
            <h2>Requêtes SQL - {{ dbName }}</h2>
            <div class="flex space-x-2">
                <a href="{{ path('app_cpanel_database_index') }}" class="db-btn db-btn-secondary db-btn-icon">
                    <i class="fas fa-arrow-left"></i> Retour aux bases de données
                </a>
            </div>
        </div>
        <div class="db-card-body">
            <div class="alert alert-info mb-4">
                <p><i class="fas fa-info-circle"></i> Exécutez des requêtes SQL sur votre base de données MySQL. Attention : les modifications sont définitives.</p>
            </div>
            
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mb-4">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            
            <div class="mb-6">
                <h3 class="text-xl font-semibold mb-4">Exécuter une requête SQL</h3>
                <form action="{{ path('app_cpanel_database_query', {'dbName': dbName}) }}" method="post">
                    <div class="mb-4">
                        <label for="query" class="block text-sm font-medium text-gray-700 mb-2">Requête SQL</label>
                        <textarea id="query" name="query" class="query-editor w-full p-3 border border-gray-300 rounded-md" placeholder="SELECT * FROM table_name;">{{ query }}</textarea>
                    </div>
                    <div class="mb-4">
                        <label for="db_password" class="block text-sm font-medium text-gray-700 mb-2">Mot de passe de la base de données (optionnel)</label>
                        <input type="password" id="db_password" name="db_password" class="w-full p-3 border border-gray-300 rounded-md" placeholder="Entrez le mot de passe de la base de données" value="{{ app.session.get('db_password_' ~ dbName) }}">
                        <p class="text-sm text-gray-500 mt-1">Si vous avez créé cette base de données avec un mot de passe spécifique, veuillez le saisir ici. Le mot de passe sera sauvegardé en session pour les requêtes ultérieures.</p>
                        {% if app.session.get('db_password_' ~ dbName) %}
                            <p class="text-sm text-green-500 mt-1"><i class="fas fa-check-circle"></i> Un mot de passe est déjà enregistré pour cette base de données.</p>
                        {% endif %}
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="db-btn db-btn-primary db-btn-icon">
                            <i class="fas fa-play"></i> Exécuter
                        </button>
                    </div>
                </form>
            </div>
            
            {% if result is defined %}
                <div class="mt-6">
                    <h3 class="text-xl font-semibold mb-4">Résultats</h3>
                    
                    {% if result.error is defined %}
                        <div class="alert alert-danger">
                            <p><i class="fas fa-exclamation-triangle"></i> Erreur : {{ result.error }}</p>
                        </div>
                    {% elseif result.message is defined %}
                        <div class="alert alert-success">
                            <p><i class="fas fa-check-circle"></i> {{ result.message }}</p>
                        </div>
                    {% elseif result.data is defined and result.data is not empty %}
                        <div class="result-table">
                            <table>
                                <thead>
                                    <tr>
                                        {% for column in result.data[0]|keys %}
                                            <th>{{ column }}</th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in result.data %}
                                        <tr>
                                            {% for value in row %}
                                                <td>{{ value }}</td>
                                            {% endfor %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        {% if success is defined and success is not empty %}
                            <div class="alert alert-success">
                                <p><i class="fas fa-check-circle"></i> {{ success }}</p>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <p><i class="fas fa-info-circle"></i> La requête a été exécutée avec succès, mais n'a retourné aucun résultat.</p>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            {% endif %}
            
            <div class="mt-6">
                <h3 class="text-xl font-semibold mb-4">Tables dans {{ dbName }}</h3>
                {% if tables is empty %}
                    <p class="text-gray-500">Aucune table trouvée dans cette base de données.</p>
                {% else %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for table in tables %}
                            <div class="db-card">
                                <div class="db-card-header">
                                    <h4>{{ table }}</h4>
                                </div>
                                <div class="db-card-body">
                                    <div class="flex space-x-2">
                                        <button onclick="document.getElementById('query').value = 'SELECT * FROM {{ table }} LIMIT 100;'" class="db-btn db-btn-sm db-btn-secondary db-btn-icon">
                                            <i class="fas fa-eye"></i> Voir
                                        </button>
                                        <button onclick="document.getElementById('query').value = 'DESCRIBE {{ table }};'" class="db-btn db-btn-sm db-btn-secondary db-btn-icon">
                                            <i class="fas fa-info-circle"></i> Structure
                                        </button>
                                        <form action="{{ path('app_cpanel_database_drop_table', {'dbName': dbName, 'tableName': table}) }}" method="post" class="inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette table ? Cette action est irréversible.')">
                                            <button type="submit" class="db-btn db-btn-sm db-btn-danger db-btn-icon">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                
                <div class="mt-6">
                    <h3 class="text-xl font-semibold mb-4">Créer une nouvelle table</h3>
                    <button onclick="document.getElementById('query').value = 'CREATE TABLE nouvelle_table (\n  id INT AUTO_INCREMENT PRIMARY KEY,\n  nom VARCHAR(255) NOT NULL,\n  description TEXT,\n  date_creation DATETIME DEFAULT CURRENT_TIMESTAMP\n);'" class="db-btn db-btn-primary db-btn-icon">
                        <i class="fas fa-plus"></i> Générer un modèle de création de table
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}