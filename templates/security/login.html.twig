{% extends 'base.html.twig' %}

{% block title %}Connexion - Web Forge{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl opacity-75 transition-all duration-300 hover:opacity-90"></div>
        <div class="relative px-4 py-10 bg-white dark:bg-gray-800 shadow-xl sm:rounded-3xl sm:p-20 transition-transform duration-300 hover:scale-[1.01]">
            <div class="max-w-md mx-auto">
                <div class="divide-y divide-gray-200 dark:divide-gray-700">
                    <div class="py-8 text-base leading-6 space-y-4 text-gray-700 dark:text-gray-300 sm:text-lg sm:leading-7">
                        <h1 class="text-4xl font-extrabold text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-blue-600">Connexion</h1>

                        <form method="post" class="space-y-6">
                            {% if error %}
                                <div class="bg-red-100 dark:bg-red-900/50 border-l-4 border-red-500 text-red-700 dark:text-red-200 p-4 rounded-r-lg transition-all duration-300" role="alert">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            <div class="space-y-2">
                                <label for="inputEmail" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                                <div class="mt-1 relative rounded-md shadow-sm">
                                    <input type="email" placeholder="Votre email" value="{{ last_username }}" name="email" id="inputEmail" 
                                           class="appearance-none block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-400 
                                                  focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent 
                                                  dark:bg-gray-700 dark:text-white sm:text-sm transition-all duration-300 
                                                  hover:border-purple-400 dark:hover:border-purple-400" 
                                           autocomplete="email" required autofocus>
                                </div>
                            </div>

                            <div class="space-y-2">
                                <label for="inputPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Mot de passe</label>
                                <div class="mt-1 relative rounded-md shadow-sm">
                                    <input type="password" name="password" placeholder="Votre mot de passe" id="inputPassword" 
                                           class="appearance-none block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm placeholder-gray-400 
                                                  focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent 
                                                  dark:bg-gray-700 dark:text-white sm:text-sm transition-all duration-300 
                                                  hover:border-purple-400 dark:hover:border-purple-400" 
                                           autocomplete="current-password" required>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="pt-2">
                                <button type="submit" 
                                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white 
                                               bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 
                                               focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 
                                               dark:focus:ring-offset-gray-900 transform transition-all duration-300 hover:scale-[1.02] 
                                               hover:shadow-lg">
                                    Se connecter
                                </button>
                            </div>
                        </form>

                        <p class="mt-8 text-center text-sm text-gray-600 dark:text-gray-400">
                            Pas encore de compte?
                            <a href="{{ path('app_register') }}" 
                               class="font-medium text-purple-600 hover:text-purple-500 dark:text-purple-400 dark:hover:text-purple-300 
                                      transition-colors duration-300 hover:underline">S'inscrire</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}